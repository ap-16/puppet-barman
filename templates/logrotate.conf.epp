<%- |
    Stdlib::Absolutepath               $logfile,
    String                             $user,
    String                             $group,
    | -%>
# managed by puppet!

<%= $logfile %> {
    weekly
    rotate 4
    delaycompress
    compress
    missingok
    notifempty
    create 0640 <%= $user %> adm
    #create 0640 <%= $user %> <%= $group %>
}
